{
	"easycom": {
		// npm安装的方式不需要前面的"@/"，下载安装的方式需要"@/"
		// npm安装方式
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"name": "login",
			"aliasPath": "/",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"navigationBarTitleText": "登录页"
			}
		}, {
			"path": "pages/index/index",
			"name": "index",
			"style": {
				"navigationBarTitleText": "农乐购"
			}
		}, {
			"path": "pages/category/category",
			"name": "category",
			"style": {
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/my/my",
			"name": "my",
			"style": {
				"navigationBarTitleText": "农乐购",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/publish/publish",
			"name": "publish",
			"style": {
				"navigationBarTitleText": "发布供应",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/goodDetail/goodDetail",
			"name": "goodDetail",
			"style": {
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/cart/cart",
			"name": "cart",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/order/order",
			"name": "order",
			"style": {
				"navigationBarTitleText": "确认订单",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/address/address",
			"name": "address",
			"style": {
				"navigationBarTitleText": "收货地址",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/editAddress/editAddress",
			"name": "editAddress",
			"style": {
				"navigationBarTitleText": "地址编辑",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/myOrder/myOrder",
			"name": "myOrder",
			"style": {
				"navigationBarTitleText": "我的订单",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/paymentSucceeded/paymentSucceeded",
			"name": "paymentSucceeded",
			"style": {
				"navigationBarTitleText": "支付成功",
				"enablePullDownRefresh": false,
				"app-plus": { //uni-app项目对应节点名称为"app-plus"
					"titleNView": {
						"autoBackButton": false
					}
				}
			}
		}, {
			"path": "pages/myCollect/myCollect",
			"name": "myCollect",
			"style": {
				"navigationBarTitleText": "我的收藏",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/register/register",
			"name": "register",
			"style": {
				"navigationBarTitleText": "注册新用户",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "pages/logout/logout",
			"name": "logout",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "农乐购",
		"navigationBarBackgroundColor": "#0ef878",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		// "color": "#7A7E83",
		"selectedColor": "#3cc51f",
		// "borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbarIcon/home.png",
				"selectedIconPath": "static/tabbarIcon/home-active.png",
				"text": "首页"
			}, {
				"pagePath": "pages/category/category",
				"iconPath": "static/tabbarIcon/category.png",
				"selectedIconPath": "static/tabbarIcon/category-active.png",
				"text": "分类"
			},
			{
				"pagePath": "pages/cart/cart",
				"iconPath": "static/tabbarIcon/cart.png",
				"selectedIconPath": "static/tabbarIcon/cart-active.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/tabbarIcon/my.png",
				"selectedIconPath": "static/tabbarIcon/my-active.png",
				"text": "我的"
			}
		]
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "", //模式名称
			"path": "", //启动页面，必选
			"query": "" //启动参数，在页面的onLoad函数里面得到
		}]
	}
}
